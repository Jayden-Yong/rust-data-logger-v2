    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "üöÄ Start Full Stack (React + Rust)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "start full stack",
            "serverReadyAction": {
                "pattern": "Local:.*?(https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": "üîß Debug Rust Backend",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/ava-device-logger",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "stopOnEntry": false,
            "sourceLanguages": ["rust"]
        },
        {
            "name": "‚öõÔ∏è Start React Frontend Only",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "npm start",
            "serverReadyAction": {
                "pattern": "Local:.*?(https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": "ü¶Ä Run Rust Backend Only",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/ava-device-logger",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build and run rust",
            "env": {},
            "stopOnEntry": false,
            "sourceLanguages": ["rust"]
        }
    ],
    "compounds": [
        {
            "name": "üî• Launch Full Development Stack",
            "configurations": [
                "‚öõÔ∏è Start React Frontend Only",
                "ü¶Ä Run Rust Backend Only"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "development",
                "order": 1
            }
        }
    ]
}